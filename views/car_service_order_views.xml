<odoo>
    <data>
        <record id="view_car_service_order_list" model="ir.ui.view">
            <field name="name">car.service.order.list</field>
            <field name="model">car.service.order</field>
            <field name="arch" type="xml">
                <list string="Service Orders">
                    <field name="name" />
                    <field name="car_id" />
                    <field name="partner_id" readonly="1" />
                    <field name="mechanic_id" />
                    <field name="service_type_id" />
                    <field name="date_order" />
                    <field name="state" />
                </list>
            </field>
        </record>



        <record id="view_car_service_order_form" model="ir.ui.view">
            <field name="name">car.service.order.form</field>
            <field name="model">car.service.order</field>
            <field name="arch" type="xml">
                <form string="Service Order">
                    <header>
                        <button name="action_confirm" type="object" string="Confirm"
                            class="btn-primary" invisible="state != 'draft'" />
                        <button name="action_done" type="object" string="Done" class="btn-success"
                            invisible="state != 'confirmed'" />
                        <button name="action_cancel" type="object" string="Cancel"
                            class="btn-warning" invisible="state not in ['draft','confirmed']" />
                        <button name="action_set_draft" type="object" string="Set to Draft"
                            class="btn-secondary" invisible="state != 'cancel'" />
                        <button name="action_print_report"
                            string="Print Service Order"
                            type="object"
                            class="btn-primary" />

                    </header>
                    <sheet>
                        <group col="2">
                            <group>
                                <field name="name" />
                                <field name="car_id" />
                                <field name="partner_id" readonly="1" />
                                <field name="mechanic_id" />
                                <field name="service_type_id" />
                                <field name="amount" />
                            </group>

                            <group>
                                <field name="date_order" />
                                <field name="state" />
                                <field name="invoice_id" readonly="1" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>